<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar_view_ll_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_height_events"
    android:background="@color/app_color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/top_bar_view_rl_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/top_bar_view_tv_1"
                style="@style/common_top_bar_view_group" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/top_bar_view_rl_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/top_bar_view_tv_2"
                style="@style/common_top_bar_view_group"
                android:drawableRight="@mipmap/icon_rank_normal"
                android:drawablePadding="@dimen/margin_padding_5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/top_bar_view_rl_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="@dimen/app_margin_screen"
            android:gravity="center" >

            <TextView
                android:id="@+id/top_bar_view_tv_3"
                style="@style/common_top_bar_view_group"
                android:drawableRight="@drawable/selector_icon_screen"
                android:drawablePadding="@dimen/margin_padding_5" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc" />

</LinearLayout>