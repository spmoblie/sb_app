<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_style_solid_1_18"
    android:padding="0dp">

    <ImageView
        android:id="@+id/dialog_close"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:contentDescription="@string/desc"
        android:scaleType="center"
        android:src="@mipmap/icon_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/dialog_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc"
        android:layout_marginTop="@dimen/margin_padding_20"
        android:layout_marginBottom="@dimen/screen_margin_default"
        android:scaleType="center"
        android:src="@mipmap/icon_success"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_content"/>

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/screen_margin_default"
        android:ellipsize="end"
        android:minLines="1"
        android:maxLines="6"
        android:textColor="@color/dialog_text_content"
        android:textSize="@dimen/app_text_size_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/dialog_button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_margin_default"
        android:layout_marginBottom="@dimen/margin_padding_20"
        android:background="@drawable/shape_style_solid_5_33"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_padding_5"
        android:paddingLeft="@dimen/margin_padding_30"
        android:paddingRight="@dimen/margin_padding_30"
        android:paddingTop="@dimen/margin_padding_5"
        android:text="@string/i_see"
        android:textColor="@color/dialog_text_button_2"
        android:textSize="@dimen/app_text_size_button"
        app:layout_constraintTop_toBottomOf="@id/dialog_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>