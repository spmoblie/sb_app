<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_common_ll_main"
    style="@style/top_main_layout"
    android:visibility="gone">

    <ImageButton
        android:id="@+id/top_common_left"
        style="@style/top_bar_icon"
        android:contentDescription="@string/desc" />

    <RadioGroup
        android:id="@+id/top_common_rg_main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_padding_50"
        android:paddingRight="@dimen/margin_padding_50"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/top_common_left"
        app:layout_constraintRight_toLeftOf="@+id/top_common_right">

        <RadioButton
            android:id="@+id/top_common_rb_1"
            style="@style/common_top_bar_radio_group" />

        <RadioButton
            android:id="@+id/top_common_rb_2"
            style="@style/common_top_bar_radio_group" />

        <RadioButton
            android:id="@+id/top_common_rb_3"
            style="@style/common_top_bar_radio_group" >
        </RadioButton>
    </RadioGroup>

    <ImageButton
        android:id="@+id/top_common_right"
        style="@style/top_bar_icon"
        android:src="@mipmap/icon_share"
        android:contentDescription="@string/desc"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>