<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comment_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_padding_20"
    android:paddingLeft="@dimen/app_margin_screen"
    android:paddingRight="@dimen/app_margin_screen">

    <com.songbao.sampo.widgets.RoundImageView
        android:id="@+id/comment_iv_head"
        android:layout_width="@dimen/margin_padding_25"
        android:layout_height="@dimen/margin_padding_25"
        android:src="@mipmap/icon_default_head"
        app:type="circle" />

    <TextView
        android:id="@+id/comment_tv_nick"
        style="@style/list_item_text"
        android:textColor="@color/app_color_gray_5"
        android:textSize="@dimen/app_text_size_small"
        android:layout_marginLeft="@dimen/margin_padding_5"
        app:layout_constraintLeft_toRightOf="@+id/comment_iv_head"
        app:layout_constraintTop_toTopOf="@+id/comment_iv_head"
        app:layout_constraintBottom_toBottomOf="@+id/comment_iv_head" />

    <TextView
        android:id="@+id/comment_tv_time"
        style="@style/list_item_text"
        android:textColor="@color/app_color_gray_c"
        android:textSize="@dimen/app_text_size_small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/comment_tv_nick" />

    <TextView
        android:id="@+id/comment_tv_attr"
        style="@style/list_item_text"
        android:textColor="@color/app_color_gray_c"
        android:textSize="@dimen/app_text_size_small"
        android:layout_marginTop="@dimen/margin_padding_7"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_tv_time" />

    <RatingBar
        android:id="@+id/comment_rb_star"
        style="@style/common_star_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        android:isIndicator="true"
        android:layout_marginTop="@dimen/margin_padding_5"
        app:layout_constraintLeft_toLeftOf="@+id/comment_tv_nick"
        app:layout_constraintTop_toBottomOf="@+id/comment_tv_nick"/>

    <LinearLayout
        android:id="@+id/comment_ll_content_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_padding_20"
        android:layout_marginLeft="@dimen/margin_padding_30"
        app:layout_constraintTop_toBottomOf="@+id/comment_rb_star">

        <TextView
            android:id="@+id/comment_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/shows_text_color"
            android:textSize="@dimen/app_text_size_label" />

        <HorizontalScrollView
            android:id="@+id/comment_view_hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_10"
            android:paddingTop="@dimen/margin_padding_10"
            android:paddingBottom="@dimen/margin_padding_10"
            android:scrollbars="none"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/comment_tv_content"
            app:layout_constraintTop_toBottomOf="@+id/comment_tv_content">

            <LinearLayout
                android:id="@+id/comment_hsv_ll_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/comment_iv_line"
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc"
        android:layout_marginTop="@dimen/margin_padding_20"
        android:layout_marginLeft="@dimen/margin_padding_30"
        app:layout_constraintTop_toBottomOf="@+id/comment_ll_content_main"/>

</android.support.constraint.ConstraintLayout>
