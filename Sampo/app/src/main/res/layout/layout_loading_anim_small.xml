<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/loading_height_bar"
    android:background="@color/ui_color_app_bg_01">

    <ProgressBar
        android:id="@+id/loading_anim_small_progress"
        android:layout_width="@dimen/loading_small_size"
        android:layout_height="@dimen/loading_small_size"
        style="@android:style/Widget.ProgressBar.Small.Inverse"
        android:layout_marginRight="@dimen/margin_padding_10"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/loading_anim_small_tv_show"/>

    <TextView
        android:id="@+id/loading_anim_small_tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_strive_loading"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/dialog_text_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/loading_anim_small_progress"/>

</android.support.constraint.ConstraintLayout>