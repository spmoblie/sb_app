<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_base_view_main"
    style="@style/top_main_layout">

    <ImageView
        android:id="@+id/top_base_iv_left"
        style="@style/top_bar_icon"
        android:contentDescription="@string/desc" />

    <TextView
        android:id="@+id/top_base_tv_title"
        style="@style/top_center_title"
        android:maxEms="8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/top_base_bt_right"
        style="@style/top_bar_icon"
        android:layout_height="match_parent"
        android:contentDescription="@string/desc"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>