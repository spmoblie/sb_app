<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_color_app_bg_01" >

    <com.songbao.sampo.widgets.IViewPager
        android:id="@+id/my_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <TextView 
        android:id="@+id/my_image_save"
        android:layout_width="@dimen/margin_padding_120"
        android:layout_height="@dimen/margin_padding_40"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/ui_color_status"
        android:text="@string/photo_show_save_image"
        android:textColor="@color/app_color_white"
        android:textSize="@dimen/app_text_size_label"
        android:visibility="gone" />
    
    <TextView 
        android:id="@+id/my_viewpager_tv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/margin_padding_30"
        android:background="@drawable/shape_style_app_toast"
        android:gravity="center"
        android:textColor="@color/app_color_white"
        android:textSize="@dimen/app_text_size_small" />

</FrameLayout>