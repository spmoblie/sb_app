<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_to_load_footer_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_color_app_bg_01"
    android:paddingTop="@dimen/app_margin_screen"
    android:paddingBottom="@dimen/margin_padding_30"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/pull_to_load_footer_progress"
        android:layout_width="@dimen/loading_small_size"
        android:layout_height="@dimen/loading_small_size"
        android:layout_marginTop="@dimen/margin_padding_1"
        android:layout_marginEnd="@dimen/margin_padding_5"
        android:gravity="center"
        android:indeterminateDrawable="@anim/pull_loading_anim"
        android:visibility="visible" />

    <TextView
        android:id="@+id/pull_to_load_footer_tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading_strive_loading"
        android:textColor="@color/shows_text_color"
        android:textSize="@dimen/text_size_13" />

</LinearLayout>
