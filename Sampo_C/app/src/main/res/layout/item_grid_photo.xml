<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.songbao.sampo_c.widgets.RoundImageView
        android:id="@+id/photo_item_iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_default_show"
        app:type="round" />

    <ImageView
        android:id="@+id/photo_item_iv_select"
        android:layout_width="@dimen/photo_grid_tick_size"
        android:layout_height="@dimen/photo_grid_tick_size"
        android:layout_margin="@dimen/margin_padding_5"
        android:background="@drawable/selector_checkbox_large"
        android:contentDescription="@string/desc"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>