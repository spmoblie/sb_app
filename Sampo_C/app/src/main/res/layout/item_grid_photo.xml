<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/photo_img_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/photo_select"
        android:layout_width="@dimen/photo_grid_tick_size"
        android:layout_height="@dimen/photo_grid_tick_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/selector_checkbox_large"
        android:contentDescription="@string/desc"
        android:visibility="gone" />

</RelativeLayout>