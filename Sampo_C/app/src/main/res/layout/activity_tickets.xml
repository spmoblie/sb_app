<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_color_app_bg_01"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tickets_iv_top_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc"
        android:scaleType="fitStart"
        android:src="@mipmap/icon_card_bg" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/app_margin_screen">

        <TextView
            android:id="@+id/tickets_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coupon_member_meal"
            android:textColor="@color/shows_text_color"
            android:textSize="@dimen/app_text_size_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tickets_tv_title_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coupon_member_meal_en"
            android:textColor="@color/app_color_gray_9"
            android:textSize="@dimen/app_text_size_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tickets_tv_title" />

        <LinearLayout
            android:id="@+id/tickets_set_meal_1_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_30"
            android:background="@drawable/selector_meal_member"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/app_margin_screen"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tickets_tv_title_en"
            app:layout_constraintWidth_percent="0.31">

            <TextView
                android:id="@+id/tickets_set_meal_1_tv_name"
                style="@style/list_item_text"
                android:layout_marginTop="@dimen/margin_padding_5"
                android:textSize="@dimen/app_text_size_content"
                android:textStyle="bold" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_10">

                <TextView
                    android:id="@+id/tv_price_new_1_curr"
                    style="@style/common_text_price_curr"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tickets_set_meal_1_tv_price_new"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tickets_set_meal_1_tv_price_new"
                    style="@style/common_text_price"
                    app:layout_constraintLeft_toRightOf="@+id/tv_price_new_1_curr" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tickets_set_meal_1_tv_price_old"
                style="@style/list_item_text"
                android:layout_marginTop="@dimen/margin_padding_5"
                android:textColor="@color/app_color_gray_9"
                android:textSize="@dimen/app_text_size_small" />

            <TextView
                android:id="@+id/tickets_set_meal_1_tv_discount"
                style="@style/common_text_bg_frame"
                android:background="@drawable/shape_style_solid_07_08"
                android:paddingLeft="@dimen/margin_padding_11"
                android:paddingRight="@dimen/margin_padding_11"
                android:textColor="@color/app_color_white"
                android:textSize="@dimen/app_text_size_minis" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tickets_set_meal_1_iv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_23"
            android:contentDescription="@string/desc"
            android:src="@mipmap/icon_discount"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/tickets_set_meal_1_main"
            app:layout_constraintRight_toRightOf="@+id/tickets_set_meal_1_main"
            app:layout_constraintTop_toBottomOf="@+id/tickets_tv_title_en" />

        <LinearLayout
            android:id="@+id/tickets_set_meal_2_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_30"
            android:background="@drawable/selector_meal_member"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/app_margin_screen"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tickets_tv_title_en"
            app:layout_constraintWidth_percent="0.31">

            <TextView
                android:id="@+id/tickets_set_meal_2_tv_name"
                style="@style/list_item_text"
                android:layout_marginTop="@dimen/margin_padding_5"
                android:textSize="@dimen/app_text_size_content"
                android:textStyle="bold" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_10">

                <TextView
                    android:id="@+id/tv_price_new_2_curr"
                    style="@style/common_text_price_curr"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tickets_set_meal_2_tv_price_new"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tickets_set_meal_2_tv_price_new"
                    style="@style/common_text_price"
                    app:layout_constraintLeft_toRightOf="@+id/tv_price_new_2_curr" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tickets_set_meal_2_tv_price_old"
                style="@style/list_item_text"
                android:layout_marginTop="@dimen/margin_padding_5"
                android:textColor="@color/app_color_gray_9"
                android:textSize="@dimen/app_text_size_small" />

            <TextView
                android:id="@+id/tickets_set_meal_2_tv_discount"
                style="@style/common_text_bg_frame"
                android:background="@drawable/shape_style_solid_07_08"
                android:paddingLeft="@dimen/margin_padding_11"
                android:paddingRight="@dimen/margin_padding_11"
                android:textColor="@color/app_color_white"
                android:textSize="@dimen/app_text_size_minis" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tickets_set_meal_2_iv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_23"
            android:contentDescription="@string/desc"
            android:src="@mipmap/icon_discount"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/tickets_set_meal_2_main"
            app:layout_constraintRight_toRightOf="@+id/tickets_set_meal_2_main"
            app:layout_constraintTop_toBottomOf="@+id/tickets_tv_title_en" />

        <LinearLayout
            android:id="@+id/tickets_set_meal_3_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_30"
            android:background="@drawable/selector_meal_member"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/app_margin_screen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tickets_tv_title_en"
            app:layout_constraintWidth_percent="0.31">

            <TextView
                android:id="@+id/tickets_set_meal_3_tv_name"
                style="@style/list_item_text"
                android:layout_marginTop="@dimen/margin_padding_5"
                android:textSize="@dimen/app_text_size_content"
                android:textStyle="bold" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_10">

                <TextView
                    android:id="@+id/tv_price_new_3_curr"
                    style="@style/common_text_price_curr"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tickets_set_meal_3_tv_price_new"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tickets_set_meal_3_tv_price_new"
                    style="@style/common_text_price"
                    app:layout_constraintLeft_toRightOf="@+id/tv_price_new_3_curr" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tickets_set_meal_3_tv_price_old"
                style="@style/list_item_text"
                android:layout_marginTop="@dimen/margin_padding_5"
                android:textColor="@color/app_color_gray_9"
                android:textSize="@dimen/app_text_size_small" />

            <TextView
                android:id="@+id/tickets_set_meal_3_tv_discount"
                style="@style/common_text_bg_frame"
                android:background="@drawable/shape_style_solid_07_08"
                android:paddingLeft="@dimen/margin_padding_11"
                android:paddingRight="@dimen/margin_padding_11"
                android:textColor="@color/app_color_white"
                android:textSize="@dimen/app_text_size_minis" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tickets_set_meal_3_iv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_23"
            android:contentDescription="@string/desc"
            android:src="@mipmap/icon_discount"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/tickets_set_meal_3_main"
            app:layout_constraintRight_toRightOf="@+id/tickets_set_meal_3_main"
            app:layout_constraintTop_toBottomOf="@+id/tickets_tv_title_en" />

        <Button
            android:id="@+id/tickets_bt_buy_now"
            style="@style/common_text_button"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/margin_padding_35"
            android:padding="@dimen/app_margin_screen"
            android:text="@string/coupon_buy_now"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>