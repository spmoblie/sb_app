<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_color_app_bg_01">

    <FrameLayout
        android:id="@+id/main_fragment_fl_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_fragment_tab_tv_1"/>

    <View
        style="@style/set_line_horizontal_bg"
        app:layout_constraintBottom_toTopOf="@+id/main_fragment_tab_tv_1"/>

    <TextView
        android:id="@+id/main_fragment_tab_tv_1"
        style="@style/main_tab_text"
        android:text="@string/main_tab_text_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_fragment_tab_tv_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.25"/>

    <ImageView
        android:id="@+id/main_fragment_tab_iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/selector_home_tab_1"
        android:layout_marginBottom="@dimen/margin_padding_25"
        android:contentDescription="@string/desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/main_fragment_tab_tv_1"
        app:layout_constraintRight_toRightOf="@+id/main_fragment_tab_tv_1"/>

    <TextView
        android:id="@+id/main_fragment_tab_tv_2"
        style="@style/main_tab_text"
        android:text="@string/main_tab_text_2"
        app:layout_constraintLeft_toRightOf="@+id/main_fragment_tab_tv_1"
        app:layout_constraintRight_toLeftOf="@+id/main_fragment_tab_tv_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.25"/>

    <ImageView
        android:id="@+id/main_fragment_tab_iv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/selector_home_tab_2"
        android:layout_marginBottom="@dimen/margin_padding_25"
        android:contentDescription="@string/desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/main_fragment_tab_tv_2"
        app:layout_constraintRight_toRightOf="@+id/main_fragment_tab_tv_2"/>

    <TextView
        android:id="@+id/main_fragment_tab_tv_3"
        style="@style/main_tab_text"
        android:text="@string/main_tab_text_3"
        app:layout_constraintLeft_toRightOf="@+id/main_fragment_tab_tv_2"
        app:layout_constraintRight_toLeftOf="@+id/main_fragment_tab_tv_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.25"/>

    <ImageView
        android:id="@+id/main_fragment_tab_iv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/selector_home_tab_3"
        android:layout_marginBottom="@dimen/margin_padding_25"
        android:contentDescription="@string/desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/main_fragment_tab_tv_3"
        app:layout_constraintRight_toRightOf="@+id/main_fragment_tab_tv_3"/>

    <TextView
        android:id="@+id/main_fragment_tab_tv_4"
        style="@style/main_tab_text"
        android:text="@string/main_tab_text_4"
        app:layout_constraintLeft_toRightOf="@+id/main_fragment_tab_tv_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.25"/>

    <ImageView
        android:id="@+id/main_fragment_tab_iv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/selector_home_tab_4"
        android:layout_marginBottom="@dimen/margin_padding_25"
        android:contentDescription="@string/desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/main_fragment_tab_tv_4"
        app:layout_constraintRight_toRightOf="@+id/main_fragment_tab_tv_4"/>

</android.support.constraint.ConstraintLayout>