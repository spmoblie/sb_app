<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/app_margin_screen"
    android:paddingBottom="@dimen/app_margin_screen">

    <TextView
        android:id="@+id/attr_item_2_tv_num"
        style="@style/goods_text"
        android:text="@string/number"
        android:textColor="@color/app_color_gray_5"
        android:textSize="@dimen/app_text_size_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/attr_item_2_iv_num_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_num_minus"
        android:padding="@dimen/margin_padding_10"
        app:layout_constraintRight_toLeftOf="@+id/attr_item_2_tv_number"/>

    <TextView
        android:id="@+id/attr_item_2_tv_number"
        style="@style/goods_text"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/number_0"
        android:textColor="@color/app_color_gray_5"
        android:textSize="@dimen/app_text_size_label"
        android:background="@drawable/shape_style_solid_02_08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/attr_item_2_iv_num_add" />

    <ImageView
        android:id="@+id/attr_item_2_iv_num_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_num_add"
        android:padding="@dimen/margin_padding_10"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>