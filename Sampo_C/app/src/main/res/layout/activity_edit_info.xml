<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_color_app_bg_02"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_info_et_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/app_margin_screen"
            android:background="@color/app_color_white"
            android:hint="@string/desc"
            android:textColor="@color/input_text_color"
            android:textColorHint="@color/input_hint_color"
            android:textSize="@dimen/app_text_size_label" />

        <ImageView
            android:id="@+id/edit_info_iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/app_margin_screen"
            android:contentDescription="@string/desc"
            android:src="@mipmap/icon_clear"
            android:visibility="gone" />
    </LinearLayout>

    <View
        style="@style/set_line_horizontal_bg" />

    <TextView
        android:id="@+id/edit_info_tv_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_margin_screen"
        android:textColor="@color/shows_text_color"
        android:textSize="@dimen/app_text_size_small" />

</LinearLayout>