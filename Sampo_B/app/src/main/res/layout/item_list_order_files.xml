<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_files_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/app_margin_screen"
    android:paddingBottom="@dimen/app_margin_screen">

    <TextView
        android:id="@+id/order_files_item_tv_name"
        style="@style/list_item_text"
        android:layout_width="match_parent"
        android:drawableStart="@mipmap/icon_file"
        android:drawablePadding="@dimen/margin_padding_5"
        android:layout_marginEnd="@dimen/margin_padding_35"
        android:gravity="center_vertical"
        android:textSize="@dimen/app_text_size_content"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/order_files_item_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_padding_15"
        android:paddingEnd="0dp"
        android:src="@mipmap/icon_more"
        android:contentDescription="@string/desc"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>