<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_style_solid_01_16"
    android:padding="@dimen/app_margin_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_margin_dialog"
        android:gravity="center"
        android:textColor="@color/dialog_text_title"
        android:textSize="@dimen/app_text_size_dialog"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_margin_screen"
        android:paddingBottom="@dimen/app_margin_screen"
        android:gravity="center"
        android:ellipsize="end"
        android:minLines="1"
        android:maxLines="3"
        android:textColor="@color/dialog_text_content"
        android:textSize="@dimen/app_text_size_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/app_margin_dialog"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/app_margin_screen"
            android:background="@drawable/shape_style_empty_02_08"
            android:padding="@dimen/margin_padding_8"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/dialog_text_button_1"
            android:textSize="@dimen/app_text_size_button" />

        <Button
            android:id="@+id/dialog_button_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_style_solid_04_08"
            android:padding="@dimen/margin_padding_8"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/dialog_text_button_2"
            android:textSize="@dimen/app_text_size_button" />
    </LinearLayout>

</LinearLayout>