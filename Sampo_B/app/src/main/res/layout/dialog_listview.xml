<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_style_solid_01_16"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_margin_screen"
        android:gravity="center"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/dialog_text_title"
        android:textSize="@dimen/app_text_size_dialog" />

    <View
        style="@style/set_line_horizontal_bg" />

    <ListView
        android:id="@+id/dialog_list_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:divider="@color/ui_bg_color_div_min_01"
        android:dividerHeight="@dimen/margin_padding_05" />

</LinearLayout>