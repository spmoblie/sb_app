<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_item_goods_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.songbao.sampo_b.widgets.RoundImageView
        android:id="@+id/grid_item_goods_iv_goods_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/icon_default_show"
        android:scaleType="centerCrop"
        app:type="round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/grid_item_goods_tv_goods_name"
        style="@style/goods_name_text"
        android:lines="2"
        android:layout_margin="@dimen/margin_padding_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_item_goods_iv_goods_img"/>

</android.support.constraint.ConstraintLayout>