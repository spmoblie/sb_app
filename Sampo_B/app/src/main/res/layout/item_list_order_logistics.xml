<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_logistics_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/app_margin_screen">

    <TextView
        android:id="@+id/order_logistics_tv_number"
        style="@style/order_text"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/order_logistics_tv_number_check"/>

    <TextView
        android:id="@+id/order_logistics_tv_number_check"
        style="@style/order_text"
        android:text="查看物流"
        android:textColor="@color/tv_color_status"
        android:paddingLeft="@dimen/margin_padding_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/order_logistics_tv_number"
        app:layout_constraintTop_toTopOf="@+id/order_logistics_tv_number"
        app:layout_constraintBottom_toBottomOf="@+id/order_logistics_tv_number"/>

</android.support.constraint.ConstraintLayout>
