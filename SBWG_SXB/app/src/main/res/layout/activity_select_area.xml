<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_area_ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_color_nut"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_margin_default"
        android:visibility="gone">

        <TextView
            android:id="@+id/area_tv_other_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其它地区"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/app_color_greys"/>

        <TextView
            android:id="@+id/area_tv_other_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_15"
            android:text="山卡拉"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/app_color_black"
            app:layout_constraintTop_toBottomOf="@id/area_tv_other_title"/>

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/item_area_dividerImageView"
        style="@style/set_line_horizontal_bg"
        android:layout_marginLeft="@dimen/screen_margin_default"
        android:layout_marginRight="@dimen/screen_margin_default"
        android:contentDescription="@string/desc" />

    <FrameLayout
        android:id="@+id/select_area_fl_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>