<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_webview_fl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ui_bg_color_app"
        android:orientation="vertical">

        <com.sbwg.sxb.widgets.WebViewLoadingBar
            android:id="@+id/my_webview_loading_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/my_webview_fl_video_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_color_black"
            android:visibility="gone">

            <!--<com.sbwg.sxb.widgets.video.UniversalVideoView-->
                <!--android:id="@+id/my_webview_uvv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center" />-->

            <!--<com.sbwg.sxb.widgets.video.UniversalMediaController-->
                <!--android:id="@+id/my_webview_umc"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent" />-->

        </FrameLayout>

        <com.sbwg.sxb.widgets.ObservableWebView
            android:id="@+id/my_webview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layerType="software" />

        <LinearLayout
            android:id="@+id/my_webview_ll_comment_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_padding_100"
            android:padding="@dimen/margin_padding_10"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:background="@drawable/shape_frame_style_1_04"
                android:paddingLeft="@dimen/margin_padding_10"
                android:paddingRight="@dimen/margin_padding_10"
                android:hint="@string/find_comment_participate"
                android:textColor="@color/app_color_black"
                android:textColorHint="@color/input_hint_color"
                android:textSize="@dimen/app_text_size_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:paddingLeft="@dimen/margin_padding_10"
                android:text="@string/find_comment"
                android:textSize="@dimen/app_text_size_content"
                android:textColor="@color/label_text_color"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>