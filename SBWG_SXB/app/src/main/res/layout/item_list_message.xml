<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/screen_margin_default"
    android:paddingBottom="@dimen/screen_margin_default">

    <TextView
        android:id="@+id/message_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_color_black"
        android:textSize="@dimen/app_text_size_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_10"
        android:layout_marginLeft="@dimen/screen_margin_default"
        android:padding="@dimen/screen_margin_default"
        android:background="@drawable/shape_frame_style_1_04"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/message_item_time">

        <TextView
            android:id="@+id/message_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_color_black"
            android:textSize="@dimen/app_text_size_title"/>

        <TextView
            android:id="@+id/message_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_5"
            android:textColor="@color/app_color_black"
            android:textSize="@dimen/app_text_size_label"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/message_item_warn_red"
        style="@style/common_warn_red_image"
        android:layout_marginTop="@dimen/margin_padding_25"
        android:layout_marginLeft="@dimen/margin_padding_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
