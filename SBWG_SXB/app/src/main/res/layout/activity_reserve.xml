<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ui_bg_color_nut"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reserve_iv_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_default_show" />

            <TextView
                android:id="@+id/reserve_tv_title"
                style="@style/reserve_text"
                android:textSize="@dimen/app_text_size_title" />

            <TextView
                android:id="@+id/reserve_tv_author"
                style="@style/reserve_text" />

            <ImageView
                style="@style/set_line_margin"
                android:contentDescription="@string/desc" />

            <TextView
                android:id="@+id/reserve_tv_info"
                style="@style/reserve_text" />

            <ImageView
                style="@style/set_line_margin"
                android:contentDescription="@string/desc" />

            <TextView
                android:id="@+id/reserve_tv_data"
                style="@style/reserve_lay_text_go"
                android:text="预约日期：" />

            <TextView
                android:id="@+id/reserve_tv_time"
                style="@style/reserve_lay_text_go"
                android:text="预约时间：" />

            <ImageView
                style="@style/set_line_margin"
                android:contentDescription="@string/desc" />

            <TextView
                style="@style/reserve_text"
                android:text="@string/sign_up_explain"
                android:textSize="@dimen/app_text_size_content" />

            <TextView
                android:id="@+id/reserve_tv_explain"
                style="@style/reserve_text"
                android:paddingBottom="@dimen/margin_padding_15" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ui_color_button">

        <TextView
            android:id="@+id/reserve_tv_sign_up"
            style="@style/common_text_button"
            android:layout_margin="@dimen/screen_margin_default"
            android:background="@drawable/shape_button_style_3_20"
            android:padding="@dimen/margin_padding_15"
            android:text="@string/sign_up_title"
            android:textColor="@color/app_color_black"
            android:textSize="@dimen/app_text_size_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>