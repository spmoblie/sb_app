<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_color_app"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fg_mine_iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:contentDescription="@string/desc"
                android:padding="@dimen/screen_margin_default"
                android:src="@mipmap/icon_setting" />

            <com.sbwg.sxb.widgets.RoundImageView
                android:id="@+id/fg_mine_iv_head"
                android:layout_width="@dimen/margin_padding_80"
                android:layout_height="@dimen/margin_padding_80"
                android:layout_marginTop="@dimen/margin_padding_50"
                android:src="@drawable/icon_default_head"
                app:type="circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/fg_mine_tv_used_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_15"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/app_color_white"
                app:layout_constraintTop_toBottomOf="@+id/fg_mine_iv_head"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/fg_mine_tv_used_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/app_text_size_content"
                android:textColor="@color/app_color_white"
                app:layout_constraintTop_toBottomOf="@+id/fg_mine_tv_used_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <TextView
            style="@style/block_title_text"
            android:text="松小堡设计"/>

        <HorizontalScrollView
            android:id="@+id/fg_mine_hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_20"
            android:paddingBottom="@dimen/margin_padding_5"
            android:paddingTop="@dimen/margin_padding_5"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/fg_mine_ll_design_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>

        <TextView
            style="@style/block_title_text"
            android:text="我的活动"/>

        <com.sbwg.sxb.widgets.ScrollViewListView
            android:id="@+id/fg_mine_items_svlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_20"/>

    </LinearLayout>
</ScrollView>