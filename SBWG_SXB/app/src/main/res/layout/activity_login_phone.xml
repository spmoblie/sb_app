<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ui_bg_color_nut">

    <EditText
        android:id="@+id/login_phone_et_number"
        style="@style/Register_EditText"
        android:hint="@string/login_input_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_percent="0.8"/>

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/margin_padding_5"
        android:contentDescription="@string/desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_phone_et_number"
        app:layout_constraintWidth_percent="0.8"/>

    <EditText
        android:id="@+id/login_phone_et_code"
        style="@style/Register_EditText"
        android:hint="@string/login_input_verify_code"
        android:layout_marginTop="@dimen/margin_padding_20"
        app:layout_constraintTop_toBottomOf="@id/login_phone_et_number"
        app:layout_constraintLeft_toLeftOf="@id/login_phone_et_number"
        app:layout_constraintWidth_percent="0.8"/>

    <TextView
        android:id="@+id/login_phone_tv_code"
        android:layout_width="0dp"
        android:layout_height="@dimen/login_et_height_default"
        android:layout_marginTop="@dimen/margin_padding_20"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@color/app_color_white"
        android:textSize="@dimen/app_text_size_content"
        android:background="@drawable/shape_button_style_2_20"
        app:layout_constraintTop_toBottomOf="@id/login_phone_et_number"
        app:layout_constraintRight_toRightOf="@id/login_phone_et_number"
        app:layout_constraintWidth_percent="0.3"/>

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/margin_padding_5"
        android:contentDescription="@string/desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_phone_et_code"
        app:layout_constraintWidth_percent="0.8"/>

    <TextView
        android:id="@+id/login_phone_tv_password"
        style="@style/Register_TextView"
        android:layout_marginTop="@dimen/margin_padding_80"
        android:text="密码登录"
        app:layout_constraintTop_toBottomOf="@id/login_phone_et_number"
        app:layout_constraintLeft_toLeftOf="@id/login_phone_et_number"/>

    <Button
        android:id="@+id/login_phone_btn_login"
        style="@style/Register_Button"
        android:text="@string/login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.43"/>

    <ImageView
        android:id="@+id/login_phone_iv_line_vertical"
        style="@style/set_line_vertical_bg"
        android:layout_height="@dimen/margin_padding_15"
        android:layout_marginBottom="@dimen/margin_padding_52"
        android:contentDescription="@string/desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/login_phone_tv_password_retrieve"
        style="@style/Register_TextView"
        android:layout_marginRight="@dimen/margin_padding_10"
        android:layout_marginBottom="@dimen/margin_padding_50"
        android:text="找回密码"
        app:layout_constraintRight_toLeftOf="@id/login_phone_iv_line_vertical"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/login_phone_tv_register"
        style="@style/Register_TextView"
        android:layout_marginBottom="@dimen/margin_padding_50"
        android:text="注册账号"
        app:layout_constraintLeft_toRightOf="@id/login_phone_iv_line_vertical"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>