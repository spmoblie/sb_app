<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_bg_toast"
    android:paddingBottom="@dimen/margin_padding_12"
    android:paddingLeft="@dimen/margin_padding_20"
    android:paddingRight="@dimen/margin_padding_20"
    android:paddingTop="@dimen/margin_padding_12" >

    <TextView
        android:id="@+id/toast_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/app_color_white"
        android:textSize="@dimen/app_text_size_content" />

</RelativeLayout>