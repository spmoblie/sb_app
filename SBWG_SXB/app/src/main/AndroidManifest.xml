<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sbwg.sxb">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SxbTheme">
        <activity
            android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- API23以上调用系统相机需配置 -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.sbwg.sxb.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <!-- QQ -->
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1104891333" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- Weibo -->
        <activity
            android:name="com.sina.weibo.sdk.component.WeiboSdkBrowser"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Facebook -->
        <!--<activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/com_facebook_activity_theme" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="fb505192759619793"/>-->

        <!-- Activity -->
        <activity
            android:name=".activity.BaseActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask" />

        <!-- common -->
        <activity
            android:name=".activity.common.ClipImageCircularActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".activity.common.ClipImageSquareActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".activity.common.ClipPhotoGridActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".activity.common.ClipPhotoOneActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".activity.common.MyWebViewActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".activity.common.SelectListActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".activity.common.ViewPagerActivity"
            android:launchMode="standard"/>

        <!-- home -->
        <activity
            android:name=".activity.home.SignUpActivity"
            android:launchMode="standard"/>

        <!-- login -->
        <activity
            android:name=".activity.login.LoginActivity"
            android:launchMode="singleTask"/>

        <!-- mine -->
        <activity
            android:name=".activity.mine.EditUserInfoActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".activity.mine.FeedBackActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".activity.mine.PersonalActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".activity.mine.SelectAreaActivity"
            android:launchMode="standard"/>
        <activity
            android:name=".activity.mine.SettingActivity"
            android:launchMode="standard"/>

    </application>

</manifest>