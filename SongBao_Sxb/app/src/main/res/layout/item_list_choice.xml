<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_choice_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/screen_margin_default"
        android:layout_marginRight="@dimen/screen_margin_default"
        android:layout_marginTop="@dimen/margin_padding_10"
        android:background="@drawable/shape_style_solid_7_18"
        android:padding="@dimen/margin_padding_10">

        <ImageView
            android:id="@+id/list_item_choice_iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_time"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/list_item_choice_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/list_item_choice_iv_time"/>

        <TextView
            android:id="@+id/list_item_choice_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/warns_text_color"
            android:textSize="@dimen/app_text_size_small"
            app:layout_constraintLeft_toLeftOf="@id/list_item_choice_tv_time"
            app:layout_constraintTop_toBottomOf="@id/list_item_choice_tv_time" />

        <ImageView
            android:id="@+id/list_item_choice_iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_checkbox_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>