<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_area_indexRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_nut"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_area_indexLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/item_area_indexNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/screen_margin_default"
            android:layout_marginTop="@dimen/margin_padding_10"
            android:layout_marginRight="@dimen/screen_margin_default"
            android:layout_marginBottom="@dimen/margin_padding_10"
            android:textColor="@color/app_color_greys"
            android:textSize="@dimen/app_text_size_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_area_itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/item_area_nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/screen_margin_default"
            android:layout_marginTop="@dimen/margin_padding_10"
            android:layout_marginRight="@dimen/screen_margin_default"
            android:layout_marginBottom="@dimen/margin_padding_10"
            android:textColor="@color/app_color_black"
            android:textSize="@dimen/app_text_size_content" />

        <ImageView
            android:id="@+id/item_area_dividerImageView"
            style="@style/set_line_horizontal_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/screen_margin_default"
            android:layout_marginRight="@dimen/screen_margin_default"
            android:contentDescription="@string/desc" />
    </RelativeLayout>

</LinearLayout>