<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_color_app_bg_02"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_iv_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_default_show" />

            <TextView
                android:id="@+id/detail_tv_title"
                style="@style/detail_text"
                android:textSize="@dimen/app_text_size_title" />

            <TextView
                android:id="@+id/detail_tv_author"
                style="@style/detail_text" />

            <ImageView
                style="@style/set_line_margin"
                android:contentDescription="@string/desc" />

            <TextView
                android:id="@+id/detail_tv_info"
                style="@style/detail_text" />

            <ImageView
                style="@style/set_line_margin"
                android:contentDescription="@string/desc" />

            <TextView
                android:id="@+id/detail_tv_date"
                style="@style/detail_lay_text_go" />

            <TextView
                android:id="@+id/detail_tv_time"
                style="@style/detail_lay_text_go" />

            <ImageView
                android:id="@+id/detail_iv_line_3"
                style="@style/set_line_margin"
                android:contentDescription="@string/desc" />

            <TextView
                style="@style/detail_text"
                android:text="@string/sign_up_explain"
                android:textSize="@dimen/app_text_size_content" />

            <TextView
                android:id="@+id/detail_tv_explain"
                style="@style/detail_text"
                android:paddingBottom="@dimen/screen_margin_default" />

        </LinearLayout>

    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ui_color_button">

        <TextView
            android:id="@+id/detail_tv_cost"
            style="@style/detail_text"
            android:layout_marginTop="0dp"
            android:textColor="@color/app_color_white"
            android:textSize="@dimen/app_text_size_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detail_tv_click"
            style="@style/common_text_button"
            android:layout_margin="@dimen/screen_margin_default"
            android:background="@drawable/shape_style_empty_2_18"
            android:text="@string/reserve_choice"
            android:textColor="@color/shows_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>